<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/ikea_yellow_light">

    <item>

        <selector>

            <item android:state_enabled="true">
                <shape android:shape="oval">
                    <solid android:color="@color/ikea_yellow" />
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="oval">
                    <solid android:color="@color/ikea_yellow_disabled" />
                </shape>
            </item>

        </selector>

    </item>

</ripple>